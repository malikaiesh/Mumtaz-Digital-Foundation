run = "php -S 0.0.0.0:5000 -t ."

entrypoint = "index.php"
modules = ["php-8.2", "web", "nodejs-20", "nix", "postgresql-16"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["php", "-S", "0.0.0.0:5000", "-t", "."]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 5000
externalPort = 5000

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "LMS Server"

[[workflows.workflow]]
name = "LMS Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
